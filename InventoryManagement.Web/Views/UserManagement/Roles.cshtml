                    <p class="mt-2">Loading role details...</p>
                </div>
            `);

            $('#roleDetailsModal').modal('show');

            // Mock data for demonstration
            setTimeout(() => {
                $('#roleDetailsContent').html(`
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Role Information</h6>
                            <table class="table table-sm">
                                <tr><td><strong>Name:</strong></td><td>${roleName}</td></tr>
                                <tr><td><strong>Description:</strong></td><td>${getRoleDescription(roleName)}</td></tr>
                                <tr><td><strong>Priority:</strong></td><td>Medium</td></tr>
                                <tr><td><strong>Status:</strong></td><td><span class="badge bg-success">Active</span></td></tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6>Assignment Details</h6>
                            <table class="table table-sm">
                                <tr><td><strong>Assigned Users:</strong></td><td>${getUsersCount(roleName)}</td></tr>
                                <tr><td><strong>Permissions:</strong></td><td>${getPermissionsCount(roleName)}</td></tr>
                                <tr><td><strong>Created Date:</strong></td><td>2024-01-01</td></tr>
                                <tr><td><strong>Last Modified:</strong></td><td>2024-01-15</td></tr>
                            </table>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <h6>Assigned Permissions</h6>
                            <div class="d-flex flex-wrap gap-2">
                                <span class="badge bg-primary">Read Access</span>
                                <span class="badge bg-success">Write Access</span>
                                <span class="badge bg-warning">Modify Access</span>
                                <span class="badge bg-info">View Reports</span>
                            </div>
                        </div>
                    </div>
                `);
            }, 500);
        }

        function editRole(roleName) {
            alert(`Edit role: ${roleName} - This would open an edit form`);
        }

        function deleteRole(roleName) {
            if (confirm(`Are you sure you want to delete the role "${roleName}"?`)) {
                alert(`Role ${roleName} deleted successfully!`);
                location.reload();
            }
        }

        function managePermissions(roleName) {
            alert(`Manage permissions for role: ${roleName}`);
        }

        function bulkAssignRoles() {
            alert('Bulk assign roles functionality would be implemented here');
        }

        function exportRoles() {
            alert('Export roles functionality would be implemented here');
        }

        function editCurrentRole() {
            $('#roleDetailsModal').modal('hide');
            // Implement edit functionality
        }

        // Helper functions to simulate data
        function getRoleDescription(role) {
            const descriptions = {
                'Admin': 'Full system access with all permissions',
                'Manager': 'Management level access with limited admin rights',
                'User': 'Basic user access with read permissions',
                'Guest': 'Limited access for temporary users'
            };
            return descriptions[role] || 'Standard role with basic permissions';
        }

        function getUsersCount(role) {
            const counts = { 'Admin': 3, 'Manager': 8, 'User': 25, 'Guest': 5 };
            return counts[role] || Math.floor(Math.random() * 20) + 1;
        }

        function getPermissionsCount(role) {
            const counts = { 'Admin': 15, 'Manager': 8, 'User': 5, 'Guest': 2 };
            return counts[role] || Math.floor(Math.random() * 10) + 1;
        }
    </script>
}

@section Styles {
    <style>
        .page-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #e9ecef;
        }

        .role-card {
            border: 1px solid #dee2e6;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .role-card:hover {
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                transform: translateY(-2px);
            }

        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .badge {
            font-size: 0.75rem;
        }

        .dropdown-toggle::after {
            display: none;
        }

        .btn-group-sm .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        .modal-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }

        .form-check {
            margin-bottom: 0.5rem;
        }

        .spinner-border {
            width: 3rem;
            height: 3rem;
        }

        .text-sm {
            font-size: 0.875rem;
        }
    </style>
}

@functions {
    private string GetRoleDescription(string role)
    {
        return role switch
        {
            "Admin" => "Full system access with all permissions",
            "Manager" => "Management level access with limited admin rights",
            "User" => "Basic user access with read permissions",
            "Guest" => "Limited access for temporary users",
            _ => "Standard role with basic permissions"
        };
    }

    private int GetUsersCount(string role)
    {
        return role switch
        {
            "Admin" => 3,
            "Manager" => 8,
            "User" => 25,
            "Guest" => 5,
            _ => new Random().Next(1, 20)
        };
    }

    private int GetPermissionsCount(string role)
    {
        return role switch
        {
            "Admin" => 15,
            "Manager" => 8,
            "User" => 5,
            "Guest" => 2,
            _ => new Random().Next(1, 10)
        };
    }

    private int GetTotalAssignedUsers()
    {
        return Model.Sum(role => GetUsersCount(role));
    }

    private int GetTotalPermissions()
    {
        return 20; // Mock total permissions
    }

    private int GetActiveRoles()
    {
        return Model.Count; // All roles are considered active
    }
}