<div class="bg-dark text-white" id="sidebar-wrapper">
    <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">
        <i class="fas fa-warehouse"></i> Inventory
    </div>
    <div class="list-group list-group-flush my-3">
        <a asp-controller="Home" asp-action="Dashboard"
           class="list-group-item list-group-item-action bg-transparent text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
        </a>
        <a asp-controller="Products" asp-action="Index"
           class="list-group-item list-group-item-action bg-transparent text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" ? "active" : "")">
            <i class="fas fa-boxes me-2"></i>Products
        </a>
        <a asp-controller="Routes" asp-action="Index"
           class="list-group-item list-group-item-action bg-transparent text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Routes" ? "active" : "")">
            <i class="fas fa-route me-2"></i>Routes
        </a>
        <a asp-controller="Categories" asp-action="Index"
           class="list-group-item list-group-item-action bg-transparent text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Categories" ? "active" : "")">
            <i class="fas fa-tags me-2"></i>Categories
        </a>
        <a asp-controller="Departments" asp-action="Index"
           class="list-group-item list-group-item-action bg-transparent text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Departments" ? "active" : "")">
            <i class="fas fa-building me-2"></i>Departments
        </a>

        <div class="sidebar-heading text-white text-uppercase mt-4 mb-2 px-3 small">
            Reports
        </div>
        <a href="/Reports/Inventory" class="list-group-item list-group-item-action bg-transparent text-white">
            <i class="fas fa-chart-bar me-2"></i>Inventory Report
        </a>
        <a href="/Reports/Transfers" class="list-group-item list-group-item-action bg-transparent text-white">
            <i class="fas fa-exchange-alt me-2"></i>Transfer History
        </a>
    </div>
</div>