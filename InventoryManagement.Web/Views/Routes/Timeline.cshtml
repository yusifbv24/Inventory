@model List<RouteViewModel>
@{
    ViewData["Title"] = "Transfer Timeline";
    var productId = ViewBag.ProductId;
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Transfer Timeline</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Products</a></li>
        <li class="breadcrumb-item active">Timeline</li>
    </ol>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4 shadow">
                <!-- In the card-header section -->
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-history me-1"></i>
                            Product Transfer History
                        </div>
                        <!-- Add this button -->
                        <button class="btn btn-outline-secondary btn-sm" onclick="exportTimelineToPDF()">
                            <i class="fas fa-file-pdf"></i> Export PDF
                        </button>
                    </div>
                </div>
            </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="timeline">
                            @foreach (var route in Model.OrderByDescending(r => r.CreatedAt))
                            {
                                <div class="timeline-item">
                                    <div class="timeline-marker">
                                        @if (route.IsCompleted)
                                        {
                                            <i class="fas fa-check-circle text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-clock text-warning"></i>
                                        }
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">
                                            @route.RouteTypeName
                                            <small class="text-muted float-end">
                                                @route.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                            </small>
                                        </h6>
                                        <p class="mb-2">
                                            @if (route.FromDepartmentName != null)
                                            {
                                                <span>From: <strong>@route.FromDepartmentName</strong> (@route.FromWorker)</span>
                                                <br />
                                            }
                                            <span>To: <strong>@route.ToDepartmentName</strong> (@route.ToWorker)</span>
                                        </p>
                                        @if (!string.IsNullOrEmpty(route.Notes))
                                        {
                                            <p class="text-muted mb-2">
                                                <i class="fas fa-sticky-note"></i> @route.Notes
                                            </p>
                                        }
                                        @if (!string.IsNullOrEmpty(route.ImageUrl))
                                        {
                                            var imageUrl = route.ImageUrl.StartsWith("http")
                                            ? route.ImageUrl
                                            : $"http://localhost:5000{route.ImageUrl}";
                                            <img src="@imageUrl"
                                                 class="img-thumbnail timeline-image-zoom"
                                                 style="max-width: 150px; cursor: pointer;"
                                                 onclick="showImageModal('@imageUrl', 'Transfer Image')" />
                                        }
                                        @if (route.IsCompleted)
                                        {
                                            <div class="mt-2">
                                                <span class="badge bg-success">
                                                    Completed: @route.CompletedAt?.ToString("MMM dd, yyyy HH:mm")
                                                </span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-history fa-3x text-muted"></i>
                            <p class="mt-3 text-muted">No transfer history available for this product.</p>
                        </div>
                    }
                </div>
            </div>
        <div class="col-lg-4">
            <div class="card mb-4 shadow">
                <div class="card-header">
                    <i class="fas fa-chart-line me-1"></i>
                    Statistics
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <strong>Total Transfers:</strong> @Model.Count
                        </li>
                        <li class="mb-2">
                            <strong>Completed:</strong> @Model.Count(r => r.IsCompleted)
                        </li>
                        <li class="mb-2">
                            <strong>Pending:</strong> @Model.Count(r => !r.IsCompleted)
                        </li>
                        @if (Model.Any())
                        {
                            <li class="mb-2">
                                <strong>First Transfer:</strong> @Model.Min(r => r.CreatedAt).ToString("MMM dd, yyyy")
                            </li>
                            <li class="mb-2">
                                <strong>Last Transfer:</strong> @Model.Max(r => r.CreatedAt).ToString("MMM dd, yyyy")
                            </li>
                        }
                    </ul>

                    <hr />

                    <div class="d-grid">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@productId" class="btn btn-outline-primary">
                            <i class="fas fa-box"></i> View Product
                        </a>
                    </div>
                </div>
            </div>
        </div>
        </div>

    </div>

@section Scripts {
     <script src="~/js/pdf-export.js"></script>
    <script>
        function exportTimelineToPDF() {
            // Get the timeline element
            const timeline = document.querySelector('.timeline');
            if (!timeline) {
                showToast('Timeline not found', 'error');
                return;
            }

            // Clone the timeline to modify it
            const timelineClone = timeline.cloneNode(true);
            
            // Remove images
            timelineClone.querySelectorAll('img').forEach(img => img.remove());
            
            // Remove action buttons
            timelineClone.querySelectorAll('.btn').forEach(btn => btn.remove());
            
            // Simplify timeline items
            timelineClone.querySelectorAll('.timeline-item').forEach(item => {
                const marker = item.querySelector('.timeline-marker');
                const content = item.querySelector('.timeline-content');
                
                // Create simplified HTML
                item.innerHTML = `
                    <div style="display: flex; margin-bottom: 15px;">
                        ${marker.outerHTML}
                        <div style="flex: 1; margin-left: 15px; border-left: 2px solid #e0e0e0; padding-left: 15px;">
                            ${content.innerHTML}
                        </div>
                    </div>
                `;
            });

            // Generate HTML for PDF
            const htmlContent = `
                <div style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                    <h1 style="text-align: center; color: #1e40af; margin-bottom: 10px;">
                        Transfer Timeline Report
                    </h1>
                    <div style="text-align: center; color: #6b7280; margin-bottom: 20px; border-bottom: 1px solid #eee; padding-bottom: 15px;">
                        <div>Generated on: ${new Date().toLocaleString('en-US', {
                            timeZone: 'Asia/Baku',
                            year: 'numeric',
                            month: 'short',
                            day: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit'
                        })}</div>
                        <div>Total Transfers: ${timelineClone.querySelectorAll('.timeline-item').length}</div>
                    </div>
                    ${timelineClone.outerHTML}
                </div>
            `;

            const printWindow = window.open('', '_blank');
            printWindow.document.write(`
                <!DOCTYPE html>
                <html>
                <head>
                    <meta charset="UTF-8">
                    <title>Transfer Timeline Report</title>
                    <style>
                        page { 
                            size: portrait; 
                            margin: 1cm;
                        }
                        body { 
                            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                            font-size: 10pt;
                            color: #333;
                            line-height: 1.4;
                        }
                        .timeline-item {
                            margin-bottom: 15px;
                        }
                        .timeline-marker {
                            width: 20px;
                            height: 20px;
                            border-radius: 50%;
                            display: flex;
                            align-items: center;
                            justify-content: center;
                            margin-top: 5px;
                        }
                        .fa-check-circle { color: #28a745; }
                        .fa-clock { color: #ffc107; }
                        .timeline-content {
                            background: #f8f9fa;
                            padding: 10px;
                            border-radius: 5px;
                            border: 1px solid #e0e0e0;
                        }
                        h6 {
                            font-size: 11pt;
                            margin: 0 0 5px 0;
                            display: flex;
                            justify-content: space-between;
                        }
                        .badge {
                            display: inline-block;
                            padding: 3px 8px;
                            border-radius: 4px;
                            font-weight: 600;
                            margin: 2px 0;
                        }
                        .bg-success { background-color: #28a745; color: white; }
                        .bg-warning { background-color: #ffc107; color: black; }
                    </style>
                </head>
                <body>
                    ${htmlContent}
                </body>
                </html>
            `);
            printWindow.document.close();

            // Wait for content to load then print
            printWindow.onload = function () {
                setTimeout(() => {
                    printWindow.print();
                    printWindow.onafterprint = function () {
                        printWindow.close();
                    };
                }, 350);
            };
        }
    </script>
    <script>
        $(document).ready(function()
        {
            // Make timeline images clickable
            $('.timeline-content img').on('click',function(){
                const imageUrl=$(this).attr('src');
                showImageModal(imageUrl,'Transfer Image');
            });
        });
                function showImageModal(imageUrl, title) {
            // Use the global image modal from _Layout
            $('#globalModalImage').attr('src', imageUrl);
            $('#globalImageModal .modal-title').text(title || 'Image Preview');
            $('#globalImageModal').modal('show');
        }
    </script>
<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

        .timeline::before {
            content: '';
            position: absolute;
            left: 9px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #dee2e6;
        }

    .timeline-item {
        position: relative;
        padding-bottom: 30px;
    }

    .timeline-marker {
        position: absolute;
        left: -21px;
        top: 0;
        width: 20px;
        height: 20px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .timeline-content {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        border: 1px solid #dee2e6;
    }
    .card.shadow{
        border-radius:0.5rem;
        overflow:hidden;
    }
    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid rgba(0,0,0,.125);
        padding: 1rem 1.25rem;
        font-weight: 600;
    }
    
    .card-body ul.list-unstyled li {
        padding: 0.5rem 0;
        border-bottom: 1px solid #e9ecef;
    }
    
    .card-body ul.list-unstyled li:last-child {
        border-bottom: none;
    }
</style>
}