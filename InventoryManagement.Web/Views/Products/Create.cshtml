@model ProductViewModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Create Product</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
        <li class="breadcrumb-item active">Create</li>
    </ol>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4 shadow">
                <div class="card-header">
                    <i class="fas fa-plus-circle me-1"></i>
                    New Product Information
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="InventoryCode" class="form-label"></label>
                                    <input asp-for="InventoryCode" class="form-control" />
                                    <span asp-validation-for="InventoryCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Model" class="form-label"></label>
                                    <input asp-for="Model" class="form-control" />
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Vendor" class="form-label"></label>
                                    <input asp-for="Vendor" class="form-control" />
                                    <span asp-validation-for="Vendor" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Worker" class="form-label"></label>
                                    <input asp-for="Worker" class="form-control" />
                                    <span asp-validation-for="Worker" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label"></label>
                                    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DepartmentId" class="form-label"></label>
                                    <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-select">
                                        <option value="">-- Select Department --</option>
                                    </select>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label"></label>
                            <input asp-for="ImageFile" class="form-control" accept="image/*" onchange="previewImage(this, 'imagePreview')" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                            <img id="imagePreview" class="img-thumbnail mt-2" style="max-width: 200px; display: none;" />
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-check mb-3">
                                    <input asp-for="IsWorking" class="form-check-input" />
                                    <label asp-for="IsWorking" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check mb-3">
                                    <input asp-for="IsActive" class="form-check-input" />
                                    <label asp-for="IsActive" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check mb-3">
                                    <input asp-for="IsNewItem" class="form-check-input" />
                                    <label asp-for="IsNewItem" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4 shadow">
                <div class="card-header">
                    <i class="fas fa-info-circle me-1"></i>
                    Quick Tips
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Inventory codes must be unique and between 1-9999
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Upload product images for better tracking
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Mark products as "New Item" for recent acquisitions
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Assign workers to track responsibility
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/errorHandler.js"></script>
    <script>
        function previewImage(input, targetId) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#' + targetId).attr('src', e.target.result).show();
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        $(document).ready(function() {
            $('form').on('submit', function(e) {
                e.preventDefault();

                var form = $(this)[0];
                var formData = new FormData(form);
                var $submitBtn = $(this).find('button[type="submit"]');

                // Store original button text
                if (!$submitBtn.data('originalText')) {
                    $submitBtn.data('originalText', $submitBtn.html());
                }

                // Disable button and show spinner
                $submitBtn.prop('disabled', true)
                    .html('<span class="spinner-border spinner-border-sm me-2"></span>Processing...');

                $.ajax({
                    url: form.action,
                    type: form.method,
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        console.log('Response:', response);

                        // Check various response formats
                        if (response.approvalRequestId || response.ApprovalRequestId ||
                            response.status === 'PendingApproval' || response.Status === 'PendingApproval') {
                            // Approval request
                            showToast(
                                response.message || response.Message || 'Request submitted for approval',
                                'info'
                            );
                            setTimeout(() => window.location.href = '/Products', 2000);
                        } else if (response.isSuccess !== false) {
                            // Direct success
                            showToast('Product created successfully!', 'success');
                            setTimeout(() => window.location.href = '/Products', 1500);
                        } else {
                            // Response indicates failure
                            showToast(response.message || 'Failed to create product', 'error');
                            resetFormState(form);
                        }
                    },
                    error: function(xhr) {
                        ErrorHandler.handleAjaxError(xhr, xhr.statusText, null, {
                            form: form,
                            defaultMessage: 'Failed to create product. Please check your input and try again.',
                            onError: function(errorMessage) {
                                // Additional handling for specific errors
                                if (errorMessage.toLowerCase().includes('inventory code')) {
                                    $('#InventoryCode').addClass('is-invalid')
                                        .after('<div class="invalid-feedback">' + errorMessage + '</div>');
                                }
                            }
                        });
                    }
                });
            });

            // Clear validation errors on input change
            $('input').on('input change', function() {
                $(this).removeClass('is-invalid');
                $(this).next('.invalid-feedback').remove();
            });
        });
    </script>
}