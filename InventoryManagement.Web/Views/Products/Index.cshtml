@model List<ProductViewModel>
@{
    ViewData["Title"] = "Products";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Products</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Products</li>
    </ol>

    <!-- Filters Card -->
    <div class="card mb-3 shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <input type="text" class="form-control" id="searchBox" placeholder="Search code, model, vendor...">
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="categoryFilter">
                        <option value="">All Categories</option>
                        @foreach (var cat in Model.Select(p => p.CategoryName).Distinct().OrderBy(c => c))
                        {
                            <option value="@cat">@cat</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="departmentFilter">
                        <option value="">All Departments</option>
                        @foreach (var dept in Model.Select(p => p.DepartmentName).Distinct().OrderBy(d => d))
                        {
                            <option value="@dept">@dept</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="statusFilter">
                        <option value="">All Status</option>
                        <option value="working">Working</option>
                        <option value="not-working">Not Working</option>
                        <option value="new">New Items</option>
                    </select>
                </div>
                <div class="col-md-3 text-end">
                    <button class="btn btn-secondary" id="resetFilters">
                        <i class="fas fa-undo"></i> Reset
                    </button>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add Product
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4 shadow">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <i class="fas fa-boxes me-1"></i>
                    Product Inventory
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle" id="productsTable">
                        <thead>
                            <tr>
                                <th style="width: 80px;">Image</th>
                                <th>Code</th>
                                <th>Product Details</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th style="width: 120px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="@product.FullImageUrl" class="img-thumbnail"
                                                 style="width: 60px; height: 60px; object-fit: cover;"
                                                 alt="@product.CategoryName">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                <i class="fas fa-image text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-primary fs-6">@product.InventoryCode</span>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>@product.Model</strong>
                                            <small class="text-muted">by @product.Vendor</small>
                                        </div>
                                        <small class="text-muted">
                                            <i class="fas fa-tag"></i> <span class="category-name">@product.CategoryName</span>
                                        </small>
                                    </td>
                                    <td>
                                        <div>
                                            <i class="fas fa-building"></i> <span class="department-name">@product.DepartmentName</span>
                                        </div>
                                        @if (!string.IsNullOrEmpty(product.Worker))
                                        {
                                            <small class="text-muted">
                                                <i class="fas fa-user"></i> @product.Worker
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex gap-1 flex-wrap">
                                            @if (product.IsWorking)
                                            {
                                                <span class="badge bg-success status-badge" data-status="working">Working</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger status-badge" data-status="not-working">Not Working</span>
                                            }
                                            @if (product.IsNewItem)
                                            {
                                                <span class="badge bg-info status-badge" data-status="new">New</span>
                                            }
                                            @if (!product.IsActive)
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-info" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteProduct(@product.Id)" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-box open fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No products found in inventory</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i>Add First Product
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Modal remains same -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this product?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let dataTable;

        $(document).ready(function() {
            // Initialize DataTable with performance optimizations
            $.fn.dataTable.ext.search.push(customFilters);

            dataTable = $('#productsTable').DataTable({
                pageLength: 50,
                responsive: true,
                ordering:false,
                deferRender: true
            });

            // Filter event handlers
            $('#searchBox').on('keyup', () => dataTable.draw());
            $('#categoryFilter, #departmentFilter, #statusFilter').on('change', () => dataTable.draw());
            $('#resetFilters').click(resetFilters);
        });

                function customFilters(settings, data, dataIndex) {
            const search = $('#searchBox').val().toLowerCase();
            const category = $('#categoryFilter').val();
            const department = $('#departmentFilter').val();
            const status = $('#statusFilter').val();

            // data array contains text from each column: [image, code, details, location, status, actions]
            const code = data[1].toLowerCase();
            const details = data[2].toLowerCase();
            const location = data[3].toLowerCase();
            const statusText = data[4].toLowerCase();

            // Search filter
            if (search && !(code.includes(search) || details.includes(search) || location.includes(search))) {
                return false;
            }

            // Category filter
            if (category && !details.includes(category.toLowerCase())) {
                return false;
            }

            // Department filter
            if (department && !location.includes(department.toLowerCase())) {
                return false;
            }

            // Status filter
            if (status === 'working' && !statusText.includes('working') || statusText.includes('not working')) {
                return false;
            }
            if (status === 'not-working' && !statusText.includes('not working')) {
                return false;
            }
            if (status === 'new' && !statusText.includes('new')) {
                return false;
            }

            return true;
        }

        function resetFilters() {
            $('#searchBox').val('');
            $('#categoryFilter').val('');
            $('#departmentFilter').val('');
            $('#statusFilter').val('');
            dataTable.draw();
        }

        function deleteProduct(id) {
            $('#deleteForm').attr('action', '/Products/Delete/' + id);
            $('#deleteModal').modal('show');
        }
    </script>
}