{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft.AspNetCore": "Information",
            "RabbitMQ": "Debug"
        }
    },
    "AllowedHosts": "*",
    "ApiGateway": {
        "BaseUrl": "http://localhost:5000"
    },
    "Authentication": {
        "CookieExpirationMinutes": 480,
        "RequireHttps": false
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore": "Information",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://localhost:5342",
                    "apiKey": null,
                    "restrictedToMinimumLevel": "Information"
                }
            }
        ],          

        "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
        "Properties": {
            "ApplicationName": "InventoryManagement.Web",
            "Environment": "Development"
        }
    }
}