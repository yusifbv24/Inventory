{
    "AllowedHosts": "*",
    "ImageSettings": {
        "Path": "wwwroot/images/products",
        "MaxSizeInMB": 5,
        "BaseUrl": "https://inventory166.az/images/products"
    },
    "RabbitMQ": {
        "HostName": "rabbitmq"
    },
    "Jwt": {
        "ExpirationInMinutes": 480
    },
    "Services": {
        "ApprovalService": "http://api-gateway",
        "RouteService": "http://route-service"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore": "Warning",
                "Microsoft.AspNetCore.Authentication": "Warning",
                "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning",
                "Microsoft.AspNetCore.Mvc.Infrastructure": "Warning",
                "Microsoft.AspNetCore.Routing": "Warning",
                "Microsoft.AspNetCore.StaticFiles": "Warning",
                "System.Net.Http.HttpClient": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://seq:80",
                    "restrictedToMinimumLevel": "Information"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithThreadId"
        ],
        "Properties": {
            "ApplicationName": "ProductService",
            "Environment": "Production"
        }
    }
}
