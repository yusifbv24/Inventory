{
    "AllowedHosts": "*",
    "ImageSettings": {
        "Path": "wwwroot/images/products",
        "MaxSizeInMB": 5,
        "BaseUrl": "https://inventory166.az/images/products"
    },
    "RabbitMQ": {
        "HostName": "rabbitmq"
    },
    "Jwt": {
        "ExpirationInMinutes": 480
    },
    "Services": {
        "RouteService": "http://route-service"
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Seq" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore": "Warning",
                "Microsoft.EntityFrameworkCore": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://seq:80",
                    "restrictedToMinimumLevel": "Information",
                    "bufferBaseFilename": "/tmp/seq-buffer",
                    "apiKey": null
                }
            },
            {
                "Name": "Console",
                "Args": {
                    "restrictedToMinimumLevel": "Information"
                }
            }
        ],
        "Properties": {
            "ApplicationName": "ProductService",
            "Environment": "Production"
        }
    }
}
