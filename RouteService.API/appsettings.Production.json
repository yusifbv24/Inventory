{
    "AllowedHosts": "*",
    "ProductService": {
        "BaseUrl": "http://product-service"
    },
    "ConnectionStrings": {
        "Seq": "http://seq:80"
    },
    "RabbitMQ": {
        "HostName": "rabbitmq",
        "ExchangeName": "inventory-events"
    },
    "ImageSettings": {
        "Path": "wwwroot/images/routes",
        "MaxSizeInMB": 5
    },
    "Jwt": {
        "ExpirationInMinutes": 480
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore": "Warning",
                "Microsoft.AspNetCore.Authentication": "Warning",
                "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning",
                "Microsoft.AspNetCore.Mvc.Infrastructure": "Warning",
                "Microsoft.AspNetCore.Routing": "Warning",
                "Microsoft.AspNetCore.StaticFiles": "Warning",
                "System.Net.Http.HttpClient": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://seq:80",
                    "restrictedToMinimumLevel": "Information"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithThreadId"
        ],
        "Properties": {
            "ApplicationName": "RouteService",
            "Environment": "Production"
        }
    }
}