{
    "AllowedHosts": "*",
    "ProductService": {
        "BaseUrl": "http://product-service"
    },
    "ConnectionStrings": {
        "Seq": "http://seq:80"
    },
    "RabbitMQ": {
        "HostName": "rabbitmq",
        "ExchangeName": "inventory-events"
    },
    "ImageSettings": {
        "Path": "wwwroot/images/routes",
        "MaxSizeInMB": 5
    },
    "Jwt": {
        "ExpirationInMinutes": 480
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Warning",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore": "Warning",
                "Microsoft.AspNetCore.Authentication": "Warning",
                "System.Net.Http.HttpClient": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://seq:80",
                    "restrictedToMinimumLevel": "Warning"
                }
            }
        ]
    }
}